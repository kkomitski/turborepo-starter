{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/helpers/*": ["./helpers/*"],
      "@/components/*": ["./components/*"],
      "@components/*": ["./components/*"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": ["./*", "./stories", "./components", "./components/*", "./components/**/*", "./"]
}
